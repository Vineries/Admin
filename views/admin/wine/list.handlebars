<a href="new">New</a>
<table class="ui sortable celled table">
    <thead>
        <tr>
            <th class="sorted ascending">ID</th>
            <th class="sorted ascending">Name</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        {{#each wines}}
        <tr>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{category}}</td>
        </tr>
        {{/each}}
    <tfoot>
        <tr>
            <th colspan='3'>Wines: {{wines.length}}</th>
        </tr>
    </tfoot>
</table>

{{#section 'actionbar'}}
<div class="ui vertical menu">
  <a class="active teal item" href="new">
    New
  </a>
  <a class="item">
    Spam
    <div class="ui label">51</div>
  </a>
  <a class="item">
    Updates
    <div class="ui label">1</div>
  </a>
  <div class="item">
    <div class="ui transparent icon input">
      <input type="text" placeholder="Search mail...">
      <i class="search icon"></i>
    </div>
  </div>
</div>
{{/section}}